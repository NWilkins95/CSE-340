<!--
    The following EJS template code checks if a 'title' variable is present.
    - If 'title' exists, it renders it inside an <h1> tag.
    - If 'title' is not present, it attempts to redirect the user to the homepage ('/').
-->

<% if (title) { %>
<h1 id="account-management-title"><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<!-- 
    This line is an EJS (Embedded JavaScript) comment that renders flash messages or notifications to the user interface.
-->

<%- messages() %>

<!-- Following EJS code displays "You're Logged In" -->
<div id="management-page-content">
  <% if (locals.accountData.account_type != "Employee" && locals.accountData.account_type != "Admin") { %>
    <h2>Welcome, <%- locals.accountData.account_firstname %> </h2>
    <a href="/account/update" class="management-link">Update Account Information</a>
  <% } else { %>
    <h2>Welcome, <%- locals.accountData.account_firstname %></h2>
    <a href="/account/update" class="management-link">Update Account Information</a>

    <div id="inventory-management">
      <h2>Inventory Management</h2>
      <a href="/inv/" class="management-link">Manage Inventory</a>
    </div>
  <% } %>
</div>